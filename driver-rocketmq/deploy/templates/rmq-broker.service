[Unit]
Description=RocketMQ-Broker
After=network.target

[Service]
ExecStart=/opt/rocketmq/rocketmq-all-4.3.0-bin-release/bin/mqbroker -c conf/rmq-broker.properties
WorkingDirectory=/opt/rocketmq/rocketmq-all-4.3.0-bin-release/
RestartSec=1s
Restart=on-failure
Type=simple
LimitNOFILE=300000

[Install]
WantedBy=multi-user.target
